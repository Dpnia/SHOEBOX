<% current_user.shoes.each do |s| %>
  <div class="jumbotron">
  <h3><%= s.shoename %></h3>
  <%=form_tag '/mybox/destroy', method: 'get' do %>
	<input type="hidden" name = "id" value="<%= s.id %>">
	Type : <%= s.shoetype %><br>
	Color : <%= s.color %><br>
	<button type="button" class="btn-default"><a href="/mybox/detail?id=<%=s.id%>">Detail</a></button>
	<input type="submit" class="btn-default" value="Delete" onclick="confirm('Delete?');"></div>
  <% end %>
<% end %>
