<h1>Shoe Information</h1>
You can see your shoes.<br>

<% current_user.shoes.each do |s| %>
  <h3><%= s.shoename %></h3>
  <%=form_tag '/mybox/destroy', method: 'get' do %>
	&nbsp;&nbsp;
	<input type="hidden" name = "id" value="<%= s.id %>">
	Type : <%= s.shoetype %><br>
	Color : <%= s.color %><br>
	<button type="button" class="btn-default"><a href="/mybox/detail?id=<%=s.id%>">Detail</a></button>
	<input type="submit" class="btn-default" value="Delete" onclick="confirm('Delete?');"> 
  <% end %>
<% end %>
<br>
<h4><%= link_to 'Add Item', mybox_new_path %></h4> 

