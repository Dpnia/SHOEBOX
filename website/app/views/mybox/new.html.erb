<h1>Adding Shoes</h1>

<%=form_tag '/mybox/add', method: 'post' do %>
	<input type="text" name="shoename" placeholder="Shoe Model">
	<select name="choice">
		<option value=""selected>Choice your shoes type</option>
		<option value="WalkingShoes">WalkingShoes</option>
		<option value="Highhill">Highhill</option>
	</select>
	<select name="color">
		<option value=""selected>Chocice your shoes color</option>
		<option value="white">White</option>
		<option value="black">Black</option>
		<option value="blue">Blue</option>
		<option value="red">Red</option>
	</select>
	<input type="submit" value="Select">
<% end %>